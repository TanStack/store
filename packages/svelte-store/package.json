{
  "name": "@tanstack/svelte-store",
  "version": "0.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/TanStack/store.git",
    "directory": "packages/svelte-store"
  },
  "type": "module",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "svelte": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "clean": "rimraf ./dist && rimraf ./coverage",
    "test:types": "svelte-check --tsconfig ./tsconfig.json",
    "test:eslint": "eslint --ext .ts,.tsx,.svelte ./src",
    "test:lib": "vitest",
    "test:lib:dev": "pnpm run test:lib --watch",
    "test:build": "publint --strict",
    "build": "svelte-package --input ./src --output ./dist"
  },
  "dependencies": {
    "@tanstack/store": "workspace:*"
  },
  "devDependencies": {
    "@sveltejs/package": "^2.3.2",
    "@sveltejs/vite-plugin-svelte": "^4.0.0-next.3",
    "@testing-library/svelte": "^5.1.0",
    "eslint-plugin-svelte": "^2.40.0",
    "svelte": "^5.0.0-next.138",
    "svelte-check": "^3.8.1",
    "svelte-eslint-parser": "^0.39.1"
  },
  "peerDependencies": {
    "svelte": "^5.0.0-next.138"
  }
}
